<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
      <div class="content col-sm-12">
  
    <% @messages.each do |message| %>
    <label for="message_age" class="control-label col-md-1">年齢：</label><%= message.age %></span>
      
      <label for="message_name" class="control-label col-md-3">名前：</label><span class="label label-info"><%= message.name %></span>
      <label for="message_name" class="control-label col-md-8">コメント：</label>
      <%= message.body %>
      
      (<%= link_to "edit" , edit_message_path(message) %>
       <%= link_to "destroy" , message , method: :delete, data:
       { confirm: '削除してもよろしいですか？' } %>
       )
      
      <br>
    <% end %>
  </div>
  </div>
  <%= render 'form' %>
</div>
